{
  "name": "ai-showmaker-ts",
  "version": "1.0.0",
  "description": "AI-Showmaker TypeScript Migration - A modern, type-safe AI agent framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agent",
    "typescript",
    "langchain",
    "mcp",
    "llm",
    "automation"
  ],
  "author": "AI-Showmaker Team",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^0.3.0",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.3.0",
    "dotenv": "^16.6.1",
    "langchain": "^0.3.0",
    "openai": "^4.104.0"
  }
}
